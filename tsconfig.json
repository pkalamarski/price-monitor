{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist_node",
    "strict": false,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["*"]
    },
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "jsx": "react"
  },
  "exclude": ["node_modules", "dist_node/**/*", "dist_web/**/*"],
  "include": ["client/**/*", "server/**/*", "@types/**/*"]
}
